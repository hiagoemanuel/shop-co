model Product {
  id          String         @id @default(uuid())
  name        String
  description String?        @db.VarChar(148)
  AVGrating   Float          @default(0) @map("avg_rating")
  images      String[]
  dressStyle  DressStyleType @map("dress_style")
  type        ProductType
  sizes       SizesType[]
  colors      ColorsType[]
  price       Int
  discount    Int?
  amount      Int
  reviews     Review[]
  cart        Cart[]

  @@map("product")
}

enum ProductType {
  t_shirt
  short
  shirt
  hoodie
  jeans
}

enum ColorsType {
  beige
  black
  blue
  brown
  cyan
  grey
  green
  orange
  purple
  red
  white
  yellow
}

enum DressStyleType {
  casual
  formal
  party
  gym
}

enum SizesType {
  xx_small
  x_small
  small
  medium
  large
  x_large
  xx_large
  xxx_large
  xxxx_large
}
