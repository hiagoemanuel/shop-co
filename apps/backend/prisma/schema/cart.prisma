model Cart {
  productId String     @map("product_id")
  userId    String     @unique @map("user_id")
  amount    Int
  color     ColorsType
  name      String
  price     Int
  size      SizesType
  product   Product    @relation(fields: [productId], references: [id])
  user      User       @relation(fields: [userId], references: [id])

  @@unique([productId, userId])
  @@map("cart")
}
