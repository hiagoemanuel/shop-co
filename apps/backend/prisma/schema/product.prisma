model Product {
  id              String         @id @default(uuid())
  name            String
  description     String?        @db.VarChar(148)
  AvgRating       Float          @default(0) @map("avg_rating")
  images          String[]
  dressStyle      DressStyleType @map("dress_style")
  type            ProductType
  sizes           SizesType[]
  colors          ColorsType[]
  price           Int
  discount        Int?
  amount          Int
  discountedPrice Int?           @default(dbgenerated("\nCASE\n    WHEN (discount IS NULL) THEN NULL::integer\n    ELSE (price - COALESCE(discount, 0))\nEND")) @map("discounted_price")
  cart            Cart[]
  reviews         Review[]

  @@map("product")
}

enum ProductType {
  tShirt
  short
  shirt
  hoodie
  jeans
}

enum ColorsType {
  green
  red
  yellow
  pink
  blue
  cyan
  white
  beige
  grey
  black
}

enum DressStyleType {
  casual
  formal
  party
  gym
}

enum SizesType {
  xxSmall
  xSmall
  small
  medium
  large
  xLarge
  xxLarge
  xxxLarge
  xxxxLarge
}
